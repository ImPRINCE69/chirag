<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pec_fly"
    android:background="#000000">

    <pl.droidsonroids.gif.GifImageButton
        android:id="@+id/gif4"
        android:layout_width="match_parent"
        android:layout_height="247dp"
        android:background="@drawable/pec_flygif" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="#3D3434"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="364dp"
        android:gravity="center"
        android:layout_above="@id/gif4"
        android:text="Pec-fly *10"
        android:textColor="#FFC107"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="359dp"
        android:layout_above="@id/text1"
        android:layout_alignParentBottom="true"
        android:text="*      Sit up tall. Relax the neck and shoulders. Feet should be flat on the floor.\n
*      Grab the handles so that your palms are facing front. \n
*      Press the arms together in front of your chest with a slow, controlled movement. Keep a slight, soft bend in the elbows with wrists relaxed. \n
*      Once the arms are fully closed in front of your chest, pause for one second. \n."
        android:textColor="#FFC107"
        android:layout_marginTop="@android:dimen/app_icon_size"
        android:textSize="22dp" />


</RelativeLayout>
