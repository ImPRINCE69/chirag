<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pushups_rotation"
    android:background="#000000">

    <pl.droidsonroids.gif.GifImageButton
        android:id="@+id/gif7"
        android:layout_width="match_parent"
        android:layout_height="247dp"
        android:background="@drawable/pushups_rotationgif" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:background="#3D3434"
        android:layout_above="@id/text2"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="316dp"
        android:gravity="center"
        android:text="Push-ups Rotation"
        android:textColor="#FFC107"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="match_parent"
        android:layout_height="313dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@android:dimen/app_icon_size"
        android:text="*      Place yourself in the prone position by resting on slightly bended arms and extended legs.\n
*      Lower yourself by bending your arms until they touch the ground. Raise the trunk by contracting the chest muscles.\n
*      Rotate the torso and extend your arm upward, to form a “T”. And finally lower your arms and return to the starting position. Repeat the movement with other arm."
        android:textColor="#FFC107"
        android:textSize="22dp" />

</RelativeLayout>
