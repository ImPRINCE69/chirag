<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Advance"
    android:background="#000000">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <pl.droidsonroids.gif.GifImageButton
                android:layout_width="match_parent"
                android:layout_height="254dp"
                android:background="@drawable/pull" />

            <Button
                android:id="@+id/button1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pull-ups"
                android:background="#000000"
                android:textColor="#FFC107"/>

            <pl.droidsonroids.gif.GifImageButton
                android:layout_width="match_parent"
                android:layout_height="254dp"
                android:background="@drawable/diamondgif" />

            <Button
                android:id="@+id/button131"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Diamond Push-ups"
                android:background="#000000"
                android:textColor="#FFC107"/>

            <pl.droidsonroids.gif.GifImageButton
                android:layout_width="match_parent"
                android:layout_height="254dp"
                android:background="@drawable/hindpushgif" />

            <Button
                android:id="@+id/button132"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hindu Push-ups"
                android:background="#000000"
                android:textColor="#FFC107"/>

            <pl.droidsonroids.gif.GifImageButton
                android:layout_width="match_parent"
                android:layout_height="254dp"
                android:background="@drawable/inclinegif" />

            <Button
                android:id="@+id/button133"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Incline Dumbell press"
                android:background="#000000"
                android:textColor="#FFC107"/>

            <pl.droidsonroids.gif.GifImageButton
                android:layout_width="match_parent"
                android:layout_height="254dp"
                android:background="@drawable/lungesgif" />

            <Button
                android:id="@+id/button134"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lunges"
                android:background="#000000"
                android:textColor="#FFC107"/>

            <pl.droidsonroids.gif.GifImageButton
                android:layout_width="match_parent"
                android:layout_height="254dp"
                android:background="@drawable/pec_flygif" />

            <Button
                android:id="@+id/button135"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ped-Fly"
                android:background="#000000"
                android:textColor="#FFC107"/>


            <pl.droidsonroids.gif.GifImageButton
                android:layout_width="match_parent"
                android:layout_height="254dp"
                android:background="@drawable/pikegif" />

            <Button
                android:id="@+id/button136"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pike push-ups"
                android:background="#000000"
                android:textColor="#FFC107"/>

            <pl.droidsonroids.gif.GifImageButton
                android:layout_width="match_parent"
                android:layout_height="254dp"
                android:background="@drawable/skipping" />

            <Button
                android:id="@+id/button137"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jump Rope (Skipping)"
                android:background="#000000"
                android:textColor="#FFC107"/>

            <pl.droidsonroids.gif.GifImageButton
                android:layout_width="match_parent"
                android:layout_height="254dp"
                android:background="@drawable/squatsgif" />

            <Button
                android:id="@+id/button138"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Squats"
                android:background="#000000"
                android:textColor="#FFC107"/>

            <pl.droidsonroids.gif.GifImageButton
                android:layout_width="match_parent"
                android:layout_height="254dp"
                android:background="@drawable/widegif" />

            <Button
                android:id="@+id/button139"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wide Push-ups"
                android:background="#000000"
                android:textColor="#FFC107"/>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
